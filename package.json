{
  "name": "dds-js-devkit",
  "version": "2.3.0",
  "description": "Development dependencies for NodeJS CoreDX API binding",
  "author": {
    "name": "Rolando J. Nieves",
    "email": "rolando.j.nieves@nasa.gov"
  },
  "main": "dist/index.js",
  "bin": {
    "ddsjs-idl": "dist/ddsjs-idl.js",
    "ddsjs-idl-types": "dist/ddsjs-idl-types.js"
  },
  "scripts": {
    "compile-grammar": "java -Xmx500M -cp ${npm_config_antlr4_jar} org.antlr.v4.Tool -Dlanguage=TypeScript -no-listener -visitor -o src/dds-idl-compiler/parser src/dds-idl-compiler/DdsIdl.g4",
    "prepack": "tsc",
    "cmake-js": "cmake-js",
    "tsc": "tsc"
  },
  "dependencies": {
    "antlr4": "^4.13.2",
    "cmake-js": "^7.3.0",
    "handlebars": "^4.7.8",
    "node-addon-api": "^7.1.0",
    "tmp": "^0.2.1",
    "uuid": "^11.0.3",
    "yargs": "^17.7.2"
  },
  "files": [
    "DdsJs/**/*.cpp",
    "DdsJs/**/*.hh",
    "cmake-js/*.cmake",
    "dist/**/*.js",
    "templates/**/*.handlebars"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.17",
    "@types/tmp": "^0.2.6",
    "@types/uuid": "^10.0.0",
    "@types/yargs": "^17.0.32",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
